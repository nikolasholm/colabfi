---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Case from '../components/Case.astro';
import NetworkModal from '../components/NetworkModal.astro';

// Import your local images
// import reformsImage from '../images/case1.jpg';
// import midrollImage from '../images/case2.jpg';
// import case3Image from '../images/case3.jpg';
// import case4Image from '../images/case4.jpg';

const cases = [
  {
    title: "Site · Studio",
    description: "Faster way to collaborate and build website with your team.",
    image: "/images/case1.jpg",
    preTitle: "PRE-SEED · OPEN FOR CO-FOUNDERS",
    url: "https://site.studio",
    type: "studio"
  },
  {
    title: "reforms",
    description: "Our forms platform for collecting contacts and feedback.",
    image: "/images/case3.jpg",
    preTitle: "PRE-SEED · OPEN FOR CO-FOUNDERS",
    url: "https://reforms.dev",
    type: "studio" 
  },
  {
    title: "midroll.ai",
    description: "Midroll is new platform for audio based advertising and AI.",
    image: "/images/case2.jpg",
    preTitle: "SEED",
    url: "https://midroll.ai"
  },
  {
    title: "Page1",
    description: "AI driven SDR automation platform.",
    image: "/images/p1.jpg",
    preTitle: "SEED",
    url: "https://pageone.com"
  },
  {
    title: "Stealth",
    description: "A new wholesale platform, AI agents, time tracking and more. We're working on something new. Please join the network to hear more.",
    image: "/images/case4.jpg",
    preTitle: "PRE-SEED · OPEN FOR CO-FOUNDERS"
  }
];
---

<Layout 
  title="CO:LAB | Venture Studio"
  description="Helsinki based Venture Studio working together with startups and corporate venture teams to launch new digital platforms faster and smarter."
  image="/images/share.jpg"
>
  <Header />

  <div
  class="fixed inset-0 h-full w-full bg-[radial-gradient(#121314_1px,transparent_1px)] [background-size:16px_16px]"
></div>
<!-- Background -->
<div class="hidden absolute inset-x-0 m-auto h-80 opacity-50 max-w-xl bg-gradient-to-tr from-indigo-400 via-teal-900 to-[#C084FC] blur-[118px] -top-72"></div>
<!-- End -->

  <main>
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center pt-8 relative">
      <div class="container relative z-10">
        <h1 class="mb-6 !text-balance">
         We build cool shit with the coolest people. 
        </h1>

        <p class="mb-10 max-w-3xl">
          Helsinki based venture studio. We're a experienced team of senior product designers and developers working alongside founders and entrepreneurs (in residence) to validate and develop new platforms and startups. 
          </p>
        <div class="grid grid-cols-3 gap-8 max-w-4xl">

          <div>
            <ul class="space-y-2">
              <li>Brand Leadership</li>
              <li>Product Design</li>
             
              <li>Front + Backend Development</li>
            </ul>
          </div>

          <div>
            <ul class="space-y-2">
              <li>Discovery</li>
              <li>Validation</li>
              <li>Market entry</li>
            </ul>
          </div>
          
          
          
          <div>
            
            <ul class="space-y-2">
              <li>Management</li>
              <li>Team</li>
              <li>Pitch + Legal</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Cases Section -->
    <section id="portfolio" class="py-20 relative z-10">
      <div class="container "> 
        <div class="max-w-7xl">
        <h2>Currently working on</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
          {cases.map(caseItem => (
            <Case {...caseItem} />
          ))}
        </div>
      </div>
      </div>
    </section>

    <!-- Logo Roll Section -->
    <section class="py-20 hidden">
      <div class="container">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-12 items-center">
          <img src="/images/logo1.svg" alt="Partner Logo" class="h-8 opacity-60 hover:opacity-100 transition-opacity" />
          <img src="/images/logo3.jpg" alt="Partner Logo" class="h-8 opacity-60 hover:opacity-100 transition-opacity" />
          <img src="/images/logo4.svg" alt="Partner Logo" class="h-8 opacity-60 hover:opacity-100 transition-opacity" />
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section id="join" class="pt-20 pb-32 relative z-10">
      <div class="container">
        <h2 class="mb-4 !text-balance">
          No wo/man is an island. We connect missing talent to new ventures.
        </h2>
        <p class="text-base text-white/80 max-w-2xl mb-8">
          We collaborate with network of co:creators, agencies, advisors and investors. Sign up to the network to hear more about our missions.
        </p>
        <a href="javascript:void(0)" onclick="openNetworkModal()" class="btn">Join the network</a>
        <NetworkModal />
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-20 border-t border-white/10 z-50 relative">
      <div class="container">
        <div class="flex flex-col md:flex-row justify-between items-start gap-8">
          <p class="text-sm !text-zinc-300 max-w-xl">
            Co:lab is an independent Venture Studio. Our team has decades of experience in building startups and leading digital products. Great products are built with ongoing collaboration and hard work. Thus we invest our time and team all in with few promising early-stage startups and ideas. We typically join pre-seed and require 10-15% equity (sweat or hybrid, gap and 1-2y vest).
          </p>
          <div class="flex gap-8 text-sm !text-zinc-200">
            <a href="/privacy" class="hover:text-white">Privacy</a>
            <a href="https://client.studio/" class="hover:text-white">Studio</a>
            <a href="https://fineland.fi/" class="hover:text-white">AI</a>
          </div>
        </div>
        <p class="text-xs !text-zinc-300 mt-8">© 2025 Colab Ventures Ltd. Sofiankatu 4, FI-00170 Helsinki. No cookies.</p>
      </div>
    </footer>
  </main>
</Layout>